<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <TextView
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:id="@+id/textView_province"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/textView_city"
            android:layout_marginTop="68dp"
    />
    <TextView
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_wendu" android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/listview"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/textView_shidu"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/listview"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:id="@+id/textView_city" android:layout_marginTop="56dp"
            android:layout_marginStart="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_province"
            app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <ImageView
            android:layout_width="168dp"
            android:layout_height="147dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="41dp"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/listview" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView_currenttime"/>
</androidx.constraintlayout.widget.ConstraintLayout>